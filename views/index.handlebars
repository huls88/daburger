<div class="container">

	<div class="row">

		<div class="col-md-12">
			<h1>Da Burgers</h1>
		</div>

	</div>

	<div class="row">

		<div class="col-md-12">
			<h3>Burgers Waiting</h3>
			<ul>
				{{#each burgers}}
					{{#unless this.devoured}}
						<li>
							<h5>{{this.id}}. {{this.burger_name}}
									<form action= "burgers/updateOne/{{this.id}}?_method=PUT" method="POST">
									<input type="hidden" name = "devoured" value="true">
									<button type="submit" class="btn btn-default">Time to nom nom</button>
								</form>
							</h5>
						</li>
					{{/unless}}
				{{/each}}
			</ul>
		</div>

		<div class="col-md-6"></div>

		<div class="col-md-6">
			<h3 class=>Burger Sanctuary</h3>
			<ul>
				{{#each burgers}}
					{{#if this.devoured}}
						<li>
							<h5 class=>{{this.id}}. {{this.burger_name}}</h5>
						</li>
					{{/if}}
				{{/each}}
			</ul>
		</div>

	</div>

	<br><br>

	<div class="row">

		<div class="col-md-12">
			<form class="create-update-form" action="burgers/insertOne" method="POST">
				<div class="form-group">
					<textarea type="text" name="name"></textarea><br>
					<button class="btn btn-default" type="submit">Submit</button>
					<h5 class=>Enter a burger you want to add and eat!</h5>
				</div>
			</form>
		</div>

	</div>

</div>
